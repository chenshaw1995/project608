<% provide(:title, "Music") %>

<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | myApp</title>
  </head>
  <body>
    <p id="notice"><%= notice %></p>
    <h1>Musics</h1>
    
<%= will_paginate %>

    <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Artist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @musics.each do |music| %>
 
      <tr>
        <td><%= music.name %></td>
        <td><%= music.artist %></td>
        <td><%= link_to 'Show', music %></td>
        
        <td><%= link_to "like",controller:'likes', action:'new', id:music.id%></td>
        
        <td><%= link_to "More about #{music.name}", comments_path, id:music.id%></td>
      </tr>
     
    <% end %>
 
  </tbody>
  
</table>

<%= will_paginate %>
<br>

