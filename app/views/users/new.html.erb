<% provide(:title, 'Sign up') %>
<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | myApp</title>
  </head>
  <body>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :age %>
      <%= f.text_field :age %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
  </body>
</html>